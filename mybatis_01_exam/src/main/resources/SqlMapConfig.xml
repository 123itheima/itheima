<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--properties属性标签
    1. 定义一些静态的属性
    2. 加载外部的属性配置文件
    -->
    <properties resource="db.properties"></properties>

    <!--别名配置-->
    <typeAliases>
        <!--为单个类配置别名-->
        <!--
        <typeAlias type="com.itheima.bean.Category" alias="category"></typeAlias>
        <typeAlias type="com.itheima.bean.Route" alias="route"></typeAlias>
        <typeAlias type="com.itheima.bean.RouteImg" alias="routeImg"></typeAlias>
        <typeAlias type="com.itheima.bean.User" alias="user"></typeAlias>
        -->
        <!--批量别名配置,别名就是类名,不区分大小写-->
        <package name="com.itheima.bean"></package>
    </typeAliases>

    <!--数据库环境-->
    <environments default="mysql">
        <environment id="mysql">
            <transactionManager type="JDBC"></transactionManager>


            <!--
            dataSource :  mybatis默认支持的连接池的类型
            1. POOLED   : 底层使用了连接池的思想 (适用性能要求比较高的项目)
            2. UNPOOLED : 底层直接使用DriverManager.getConnection(this.url, properties);获取连接,没有使用连接池思想 (适用性能要求不高的项目)
            3. JNDI : 与web容器(Tomcat)绑定的方案
            -->
            <!---->
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"></property>
                <property name="url" value="${jdbc.url}"></property>
                <property name="username" value="${jdbc.username}"></property>
                <property name="password" value="${jdbc.password}"></property>
            </dataSource>

            <!--mybatis支持引入第三方连接池-->
            <!--
            <dataSource type="com.itheima.factory.MyDataSourceFactory">
                <property name="driver" value="${driver}"></property>
                <property name="url" value="${jdbc.url}"></property>
                <property name="username" value="${jdbc.username}"></property>
                <property name="password" value="${jdbc.password}"></property>
            </dataSource>
            -->
        </environment>
    </environments>

    <!--加载映射配置文件-->
    <mappers>
        <!--加载单个映射配置文件-->
        <!--
        <mapper resource="com/itheima/dao/CategoryDao.xml"></mapper>
        <mapper resource="com/itheima/dao/RouteDao.xml"></mapper>
        -->
        <!--批量加载映射配置文件-->
        <package name="com.itheima.dao"></package>
    </mappers>

</configuration>